# FR: Configuration spécifique O2Switch
# EN: O2Switch specific configuration
# ES: Configuración específica de O2Switch
# ZH: O2Switch专用配置

# Configuration base de données MySQL O2Switch
DATABASE_URL=mysql+pymysql://YOUR_DB_USER:YOUR_DB_PASSWORD@localhost/YOUR_DB_NAME
DB_HOST=localhost
DB_PORT=3306
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=YOUR_DB_NAME

# Sécurité (IMPORTANT: Génarez une clé forte)
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_NOW
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Configuration serveur
ENVIRONMENT=production
DEBUG=False
TESTING=False
HOST=0.0.0.0
PORT=8000

# Domaine et CORS (ajustez selon votre domaine)
DOMAIN=votre-domaine.com
API_DOMAIN=api.votre-domaine.com
ALLOWED_ORIGINS=["https://votre-domaine.com","https://api.votre-domaine.com"]
ALLOWED_HOSTS=["votre-domaine.com","api.votre-domaine.com"]

# Logs (chemin vers votre home O2Switch)
LOG_LEVEL=INFO
LOG_FILE=/home/YOUR_USERNAME/logs/openred-api.log

# Email SMTP O2Switch (optionnel)
SMTP_SERVER=mail.votre-domaine.com
SMTP_PORT=587
SMTP_USERNAME=noreply@votre-domaine.com
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_USE_TLS=True

# Stockage de fichiers (chemin vers votre home O2Switch)
UPLOAD_PATH=/home/YOUR_USERNAME/openred_uploads
MAX_FILE_SIZE=10485760

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Mode O2Switch
O2SWITCH_MODE=True
DISABLE_REDIS=True
DISABLE_ALEMBIC=True