# FR: Variables d'environnement pour la production OpenRed
# EN: Environment variables for OpenRed production
# ES: Variables de entorno para la producción de OpenRed
# ZH: OpenRed生产环境的环境变量

# Configuration base de données MySQL O2Switch
DATABASE_URL=mysql+pymysql://openred_user:YOUR_PASSWORD_HERE@localhost/openred_db
DB_HOST=localhost
DB_PORT=3306
DB_USER=openred_user
DB_PASSWORD=YOUR_PASSWORD_HERE
DB_NAME=openred_db

# Sécurité
SECRET_KEY=YOUR_SUPER_SECRET_KEY_HERE_GENERATE_A_STRONG_ONE
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Configuration serveur
ENVIRONMENT=production
DEBUG=False
TESTING=False

# Domaine et CORS
DOMAIN=o-red.org
API_DOMAIN=api.o-red.org
NODE_DOMAIN=node.o-red.org

# Logs
LOG_LEVEL=INFO
LOG_FILE=/home/YOUR_USERNAME/logs/openred-api.log

# Email (configuration SMTP O2Switch)
SMTP_SERVER=mail.o-red.org
SMTP_PORT=587
SMTP_USERNAME=noreply@o-red.org
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_USE_TLS=True

# Redis (si disponible)
REDIS_URL=redis://localhost:6379/0

# Stockage de fichiers
UPLOAD_PATH=/home/YOUR_USERNAME/openred_uploads
MAX_FILE_SIZE=10485760  # 10MB

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10